{
  "manifest_version": 3,
  "name": "Animated Cat Companion",
  "version": "1.3",
  "description": "A cute animated cat companion for your browser",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "cat.png"
  },
  "icons": {
    "128": "cat.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["cat-sprite.png"],
    "matches": ["<all_urls>"]
  }]
}