{
  "manifest_version": 3,
  "name": "Browser Buddy",
  "version": "0.0.0.1",
  "description": "A cute animated cat companion for your browser",
  "action": {
    "default_icon": "icons/icon128.png"
  },
"icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["cat-sprite.png"],
    "matches": ["<all_urls>"]
  }]
}



