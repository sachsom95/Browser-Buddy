{
    "manifest_version": 2,
    "name": "Animated Cat Companion",
    "version": "1.1",
    "description": "A cute animated cat companion for your browser",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.jpg"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["styles.css"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      "cat-sprite.png"
    ]
}